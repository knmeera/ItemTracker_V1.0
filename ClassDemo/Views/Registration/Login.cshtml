
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using (Html.BeginForm("Login","Registration"))
{
    <div class="container" style="margin-top:3em">
        <div class="row vertical-offset-80">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default" style="width:317px">
                    <div class="panel-heading" style="background-color:darkorange;font-size:10px;color:white;">
                        <h3 class="panel-title">Please Login</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form">
                            <img class="profile-img" style="width:280px;height:220px" src="~/Content/Images/8c8b3766126753c6d098cdb2e42cff492.png" />
                            <fieldset>
                                <div class="form-group">
                                <table>
                                    <tr>
                                        <td>@Html.TextBox("UserName",null,new { @class= "form-control" ,@placeholder="UserName",@style = "width:300px;" })</td>
                                    </tr>
                                    <tr style="color:red;">
                                        <td>@Html.ViewBag.Login</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.TextBox("Password",null, new { @class = "form-control", @placeholder = "Password", @style = "width:300px;" })</td>
                                    </tr>
                                    <tr  style="color:red;">
                                       <td>@Html.ViewBag.Password</td> 
                                    </tr>
                                </table>
                                </div>
                                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login">
                               
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

